#!/bin/bash
#
#  Regenrate hostapd-wlan0.conf when it has been emptied by Kura
#
cd /opt/SolidSense/utilities/repair
echo "# File generated on:`date`" > /etc/hostapd-wlan0.conf
sed "s/TOBEDEFINED/`hostname`/g" hostapd-wlan0.conf.tmpl >> /etc/hostapd-wlan0.conf
chown root /etc/hostapd-wlan0.conf
chmod 600 /etc/hostapd-wlan0.conf
ls -al /etc/hostapd-wlan*
